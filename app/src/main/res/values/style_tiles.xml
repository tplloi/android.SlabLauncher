<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SlabLauncher.TileArea.Item.Card" parent="SlabLauncher">
        <item name="cardCornerRadius">@dimen/item_card_radius</item>
        <item name="android:layout_margin">@dimen/item_card_margin</item>
        <item name="cardElevation">@dimen/item_card_elevation</item>
    </style>

    <style name="SlabLauncher.TileArea.Suggestions.Item.Card" parent="SlabLauncher">
        <item name="cardCornerRadius">99dp</item>
        <item name="android:layout_margin">@dimen/item_card_margin</item>
        <item name="cardElevation">@dimen/item_card_elevation</item>
    </style>

    <style name="SlabLauncher.TileArea.Suggestions.Item.Icon" parent="SlabLauncher">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="SlabLauncher.TileArea.Suggestions.Item.Label" parent="SlabLauncher">
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>
</resources>