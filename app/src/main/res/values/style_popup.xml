<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SlabLauncher.ListPopup.Container" parent="SlabLauncher">
        <item name="cardCornerRadius">@dimen/large_card_radius</item>

        <item name="android:layout_margin">@dimen/item_card_margin</item>
        <item name="android:elevation">@dimen/item_card_elevation</item>
    </style>

    <style name="SlabLauncher.ListPopup.Recycler" parent="SlabLauncher">
        <item name="android:paddingVertical">8dp</item>
    </style>

    <style name="SlabLauncher.ListPopup.Item.Container" parent="SlabLauncher">
        <item name="android:minHeight">50dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="SlabLauncher.ListPopup.Item.Icon" parent="SlabLauncher">
        <item name="android:padding">12dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginEnd">-8dp</item>
    </style>

    <style name="SlabLauncher.ListPopup.Item.Label" parent="SlabLauncher">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SlabLauncher.ListPopup.Item.Description" parent="SlabLauncher">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SlabLauncher.ListPopup.Item.Switch" parent="SlabLauncher">
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="SlabLauncher.ListPopup.Item.MultiSwitch" parent="SlabLauncher">
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="SlabLauncher.ListPopup.Item.SeekBar" parent="SlabLauncher">
    </style>

    <style name="SlabLauncher.ListPopup.Item.Entry" parent="SlabLauncher">
        <item name="android:layout_height">52dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:minHeight">42dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:textColorHint">#252627</item>
        <item name="android:background">@drawable/input_bg</item>
    </style>

    <style name="SlabLauncher.ListPopup.Title.Separator" parent="SlabLauncher">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="SlabLauncher.ListPopup.Title.Label" parent="SlabLauncher">
        <item name="android:textSize">24sp</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SlabLauncher.ListPopup.Title.Description" parent="SlabLauncher">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SlabLauncher.ListPopup.PrimaryTitle.Icon" parent="SlabLauncher">
        <item name="android:layout_height">96sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="SlabLauncher.ListPopup.PrimaryTitle.Label" parent="SlabLauncher">
        <item name="android:textSize">36sp</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="SlabLauncher.ListPopup.PrimaryTitle.Description" parent="SlabLauncher">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


    <style name="SlabLauncher.ItemPopup.Card" parent="SlabLauncher">
        <item name="cardCornerRadius">@dimen/large_card_radius</item>
        <item name="android:elevation">@dimen/item_card_elevation</item>
    </style>

    <style name="SlabLauncher.ItemPopup.Container" parent="SlabLauncher">
    </style>

    <style name="SlabLauncher.ItemPopup.Shortcut.Container" parent="SlabLauncher">
        <item name="android:background">@drawable/ripple</item>
    </style>

    <style name="SlabLauncher.ItemPopup.Shortcut.Icon" parent="SlabLauncher">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
    </style>

    <style name="SlabLauncher.ItemPopup.Shortcut.Label" parent="SlabLauncher">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>