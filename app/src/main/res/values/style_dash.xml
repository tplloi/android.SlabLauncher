<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SlabLauncher.Dash.Card" parent="SlabLauncher">
        <item name="cardCornerRadius">@dimen/large_card_radius</item>
        <item name="android:layout_margin">@dimen/item_card_margin</item>
        <item name="cardElevation">@dimen/item_card_elevation</item>
    </style>

    <style name="SlabLauncher.Dash.Top" parent="SlabLauncher">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="SlabLauncher.Dash.Statement" parent="SlabLauncher">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SlabLauncher.Dash.Date" parent="SlabLauncher">
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SlabLauncher.Dash.Alarm" parent="SlabLauncher">
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">12dp</item>
    </style>
</resources>