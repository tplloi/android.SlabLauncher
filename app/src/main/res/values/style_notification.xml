<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SlabLauncher.Notification.Recycler" parent="SlabLauncher">
        <item name="android:layout_marginBottom">@dimen/summary_card_notification_margin</item>
    </style>
    <style name="SlabLauncher.Notification.Item.Container" parent="SlabLauncher">
        <item name="android:layout_marginHorizontal">@dimen/summary_card_notification_margin</item>
        <item name="android:layout_marginTop">@dimen/summary_card_notification_margin</item>
    </style>
    <style name="SlabLauncher.Notification.Item.Source.Container" parent="SlabLauncher">
        <item name="android:layout_marginBottom">@dimen/summary_card_notification_spacing</item>
    </style>
    <style name="SlabLauncher.Notification.Item.Source.Icon" parent="SlabLauncher">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
    </style>
    <style name="SlabLauncher.Notification.Item.Source.Text" parent="SlabLauncher">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="SlabLauncher.Notification.Item.Title" parent="SlabLauncher">
        <item name="android:layout_marginRight">@dimen/summary_card_notification_spacing</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SlabLauncher.Notification.Item.Text" parent="SlabLauncher">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SlabLauncher.Notification.Item.ImageCard" parent="SlabLauncher">
        <item name="cardCornerRadius">@dimen/summary_card_image_radius</item>
        <item name="cardElevation">@dimen/summary_card_image_elevation</item>
    </style>

    <style name="SlabLauncher.Notification.Item.Image" parent="SlabLauncher">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="SlabLauncher.Notification.XMoreText" parent="SlabLauncher">
        <item name="android:layout_marginHorizontal">@dimen/summary_card_notification_margin</item>
        <item name="android:layout_marginBottom">@dimen/summary_card_notification_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/summary_card_notification_spacing</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/button_bg_invisible</item>
    </style>
</resources>