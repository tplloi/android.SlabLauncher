<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card"
    style="@style/SlabLauncher.TileArea.Item.Card">
    <io.posidon.android.slablauncher.ui.view.BackdropImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha=".5"/>
    <io.posidon.android.slablauncher.ui.view.SeeThroughView
        android:id="@+id/blur_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".3"/>
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            style="@style/SlabLauncher.TileArea.Item.Icon"
            android:id="@+id/icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:ignore="Suspicious0dp"/>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                style="@style/SlabLauncher.TileArea.Media.Title"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                style="@style/SlabLauncher.TileArea.Media.Subtitle"
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            style="@style/SlabLauncher.TileArea.Media.ButtonContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                style="@style/SlabLauncher.TileArea.Media.Button"
                android:id="@+id/button_prev"
                android:src="@drawable/ic_track_previous"
                android:background="@drawable/round_bg"
                tools:ignore="ContentDescription"/>
            <ImageView
                style="@style/SlabLauncher.TileArea.Media.Button"
                android:id="@+id/button_next"
                android:src="@drawable/ic_track_next"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/round_bg"
                tools:ignore="ContentDescription"/>
            <ImageView
                style="@style/SlabLauncher.TileArea.Media.Button"
                android:id="@+id/button_play"
                android:padding="10dp"
                android:src="@drawable/ic_play"
                android:background="@drawable/button_bg_round"
                tools:ignore="ContentDescription"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>